@model List<Category>

@{
    ViewData["Title"] = "Category List";
}

<div class="container">
    <h2 class="text-center my-4">Categories</h2>

    <div class="d-flex justify-content-end mb-3">
        <!-- Add Category Button -->
        <a asp-action="Add" asp-controller="Category" class="btn btn-primary">
            <i class="fa fa-plus"></i> Add Category
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead class="table-dark text-center">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    foreach (var category in Model)
                    {
                        <tr>
                            <td class="text-center align-middle">@category.Id</td>
                            <td class="align-middle">@category.CatogeryName</td>
                            <td class="text-center">
                               

                                <!-- Delete Button -->
                                <form asp-action="DeleteCategory" asp-controller="Category" asp-route-cat="@category.CatogeryName" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-danger btn-sm mx-1" onclick="return confirm('Are you sure you want to delete this category?');">
                                        <i class="fa fa-trash"></i> Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center">No categories found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

