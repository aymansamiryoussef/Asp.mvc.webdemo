@model Proudct
<form asp-action="@ViewData["Action"]" asp-controller="Proudct" asp-route-id="@Model.Id" method="post" class="mx-1 mx-md-4">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="d-flex flex-row align-items-center mb-4">
        
        <div data-mdb-input-init class="form-outline flex-fill mb-0">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="d-flex flex-row align-items-center mb-4">
        
        <div data-mdb-input-init class="form-outline flex-fill mb-0">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>

    <div class="d-flex flex-row align-items-center mb-4">
        
        <div data-mdb-input-init class="form-outline flex-fill mb-0">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>

    <div class="d-flex flex-row align-items-center mb-4">
        
        <div data-mdb-input-init class="form-outline flex-fill mb-0">
            <label asp-for="Stockquantity"></label>
            <input asp-for="Stockquantity" class="form-control" />
            <span asp-validation-for="Stockquantity" class="text-danger"></span>
        </div>
    </div>

    <div class="d-flex flex-row align-items-center mb-4">
        
        <div data-mdb-input-init class="form-outline flex-fill mb-0">
            <label asp-for="CategoryId"></label>
            <input asp-for="CategoryId" class="form-control" />
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>


    </div>
        <div class="d-flex flex-row align-items-center mb-4">
        
        <div data-mdb-input-init class="form-outline flex-fill mb-0">
            <label asp-for="ImageUrl"></label>
            <input asp-for="ImageUrl" class="form-control" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>


    </div>


    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">

        <button type="submit" value="SaveAddProudct" class="btn btn-primary btn-lg">@ViewData["ActionName"]</button>
    </div>

</form>
