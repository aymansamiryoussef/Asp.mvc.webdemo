@model Category

@{
    ViewData["Title"] = "Add/Edit Category";
}

<div class="container">
    <h2 class="text-center my-4">@ViewData["Title"]</h2>

    <form asp-action="AddCategory" asp-controller="Category" method="post" class="border p-4 rounded shadow-sm bg-light">
        <div class="form-group mb-3">
            <label asp-for="CatogeryName" class="form-label">Category Name</label>
            <input asp-for="CatogeryName" class="form-control" placeholder="Enter category name" />
            <span asp-validation-for="CatogeryName" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-end mt-4">
            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary me-2">
                <i class="fa fa-save"></i> Save
            </button>
            <!-- Cancel Button -->
            <a asp-action="Index" asp-controller="Category" class="btn btn-secondary">
                <i class="fa fa-times"></i> Cancel
            </a>
        </div>
    </form>
</div>

<!-- Add these scripts at the bottom if they aren't already included in your layout for validation -->
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}

