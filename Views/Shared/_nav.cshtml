<nav class="navbar navbar-expand-sm navbar-light bg-light border-bottom shadow-sm mb-3">
    <div class="container-fluid">
        <!-- Brand Logo -->
        <a class="navbar-brand fw-bold" asp-area="" asp-controller="Proudct" asp-action="Index">WEBDEMO</a>

        <!-- Toggle Button for Mobile View -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Navbar Content -->
        <div class="collapse navbar-collapse" id="navbarContent">
            <!-- Left Section: Links -->
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Proudct" asp-action="Index">Products</a>
                </li>
            </ul>

            <!-- Cart Icon with Item Count -->
            <div id="cart-container" class="position-relative me-3">
                <a href="@Url.Action("Index","CartMangmet")" class="text-dark text-decoration-none">
                    <i class="fa-solid fa-cart-shopping fs-5"></i>
                    <span id="cart-count" class="badge bg-danger rounded-circle">0</span>
                </a>
            </div>

            <!-- User Section: Authentication Links -->
            @if (User.Identity.IsAuthenticated)
            {
                <ul class="navbar-nav">
                    <!-- Greeting and Username -->
                    <li class="nav-item me-3">
                        <span class="nav-link text-muted">Welcome, <strong>@User.Identity.Name</strong></span>
                    </li>

                    <!-- Sign Out -->
                    <li class="nav-item">
                        <a class="nav-link btn btn-outline-dark btn-sm" asp-area="" asp-controller="Account" asp-action="SignOut">Sign Out</a>
                    </li>
                </ul>

                <!-- Admin Controls for "admin" Role -->
                @if (User.IsInRole("admin"))
                {
                    <ul class="navbar-nav ms-4">
                        <li class="nav-item">
                            <a class="nav-link text-primary" asp-area="" asp-controller="Proudct" asp-action="adminIndex">Controls</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-primary" asp-area="" asp-controller="Proudct" asp-action="addproudct">Add Product</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-primary" asp-area="" asp-controller="Category" asp-action="Index">Categorys</a>
                        </li>
                    </ul>
                }
            }
            else
            {
                <!-- Unauthenticated User Links -->
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link btn btn-outline-primary btn-sm" asp-controller="Account" asp-action="SignIN">Login</a>
                    </li>
                    <li class="nav-item ms-2">
                        <a class="nav-link btn btn-primary btn-sm text-white" asp-controller="Account" asp-action="Register">Register</a>
                    </li>
                </ul>
            }
        </div>
    </div>
</nav>
